<div class="container display">	
	<div class="row">
		<div class="col s2" id="left-sidebar">
			<!-- Left sidebar in wireframe -->
			<h1><%= @sentiment.stock_symbol %></h1>
			<h3><%= @main_score %>% <span style="font-size:17px">positive</span></h3>
			<h5><span style="font-size:17px">From </span><%= @nice_start_date %></h5> 
			<h5><% if !@sentiment.end_date.empty? %>
					<span style="font-size:17px">To </span><%= @nice_end_date %>
				<% end %>
			</h5>
		</div>

		<div class="col s4" id="article-list">
		<!-- Main content section of page -->
			<h4>Highlighted Articles</h4>
			<!-- list of article cards -->
			<div id="scrollable-articles">
				<% @articles.each do |row| %>
					<div class="row">
						<div class="col s12">
						  <div class="card" style="width:100%">
						    <div class="card-content">
						      <span class="card-title truncate" style="font-size:30px;"><%= link_to row[0], row[2] %> <!-- headline --></span>
						      <%# row[2] %> <!-- url -->
							  <h5><%= row[3] %>% <span class="small-card-text">positive</span></h5> <!-- pos -->
							  <h5><%= row[4] %>% <span class="small-card-text">negative</span></h5><!-- neg -->
						    </div>
						<!-- <div class="card-action">
						      <a href="#">This is a link</a>
						      <a href="#">This is a link</a>
						    </div> -->
						  </div>

						</div>
					</div>
				<% end %>
			</div>
		</div>
		<div class="col s5" id="right-sidebar">
			<!-- Right sidebar with highcharts.js -->
			<!-- This is where @timestamps comes in!! -->
			<h4>Sentiment over time range</h4>
			<div class="row">
				<div class="col s12">
					<div style="border:1px solid black;width:100%;height:300px;"></div>
				</div>
			</div>
		</div>
	</div>
</div>