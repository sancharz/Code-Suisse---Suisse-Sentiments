<%= simple_form_for(@sentiment) do |s| %>
  <%= s.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="input-field col s12">
  	     <%= s.input :stock_symbol, input_html: {id: 'autocomplete-input', autocomplete: 'off', class:'autocomplete'} %>
  	     <%# s.select(:stock_symbol, Sentiment::COMPANIES, prompt: "Select a company") %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
  	    <%= s.input :start_date, as: :string, placeholder: "DD/MM/YY", input_html: {class:'active'} %>
      </div>
      <div class="input-field col s6">
  	    <%= s.input :end_date, as: :string, placeholder: "DD/MM/YY", input_html: {class:'active'} %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col s4 offset-s4">
        <%= s.button :submit, :class => "btn waves-effect waves-light" %>
      </div>
    </div>
  </div>
<% end %>